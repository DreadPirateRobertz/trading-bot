# Trading Bot Configuration
# Copy to .env and fill in your credentials

# ── Exchange: Alpaca (Stocks + Crypto) ──
ALPACA_KEY_ID=
ALPACA_SECRET_KEY=
ALPACA_PAPER=true

# ── Exchange: Binance (Crypto) ──
BINANCE_API_KEY=
BINANCE_SECRET_KEY=
BINANCE_TESTNET=true

# ── Sentiment: Reddit ──
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=tradingbot/1.0

# ── Sentiment: Twitter/X ──
TWITTER_BEARER_TOKEN=

# ── HMM Regime Detection ──
HMM_ENABLED=true
HMM_RETRAIN_INTERVAL=500
HMM_MIN_OBSERVATIONS=50

# ── Trading Parameters ──
TRADING_SYMBOLS=BTCUSDT,ETHUSDT
INITIAL_BALANCE=100000
MAX_POSITION_PCT=0.10
YOLO_THRESHOLD=0.85
LOOKBACK_PERIOD=30

# ── Dashboard ──
DASHBOARD_PORT=3000
DASHBOARD_HOST=0.0.0.0

# ── General ──
BOT_MODE=paper
LOG_LEVEL=info
